# Description: Xorg Application: xwd
# URL:         
# Maintainer:  LFS
# Depends on:  libpng mesa xorg-xbitmaps xorg-xcb-util

name=xorg-xwd
version=1.0.7
release=1
source=(https://www.x.org/pub/individual/app/xwd-1.0.7.tar.bz2)

build() {
        cd ${name:5}-$version

        source /etc/profile.d/xorg.sh

        ./configure $XORG_CONFIG

        make
        make DESTDIR=$PKG install
}
