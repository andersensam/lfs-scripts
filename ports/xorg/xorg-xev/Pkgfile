# Description: Xorg Application: xev
# URL:         
# Maintainer:  LFS
# Depends on:  libpng mesa xorg-xbitmaps xorg-xcb-util

name=xorg-xev
version=1.2.4
release=1
source=(https://www.x.org/pub/individual/app/xev-1.2.4.tar.bz2)

build() {
        cd ${name:5}-$version

        source /etc/profile.d/xorg.sh

        ./configure $XORG_CONFIG

        make
        make DESTDIR=$PKG install
}
