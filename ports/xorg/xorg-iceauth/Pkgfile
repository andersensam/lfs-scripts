# Description: Xorg Application: iceauth
# URL:         
# Maintainer:  LFS
# Depends on:  libpng mesa xorg-xbitmaps xorg-xcb-util

name=xorg-iceauth
version=1.0.8
release=1
source=(https://www.x.org/pub/individual/app/iceauth-1.0.8.tar.bz2)

build() {
        cd ${name:5}-$version

        source /etc/profile.d/xorg.sh

        ./configure $XORG_CONFIG

        make
        make DESTDIR=$PKG install
}
