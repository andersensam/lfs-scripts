# Description: Xorg Library for libdmx
# URL:         
# Maintainer:  LFS
# Depends on:  fontconfig libxcb

name=libdmx
version=1.1.4
release=1
source=(https://www.x.org/pub/individual/lib/libdmx-1.1.4.tar.bz2)

build() {
        cd $name-$version

        source /etc/profile.d/xorg.sh

        ./configure $XORG_CONFIG $docdir

        make
        make DESTDIR=$PKG install
}
