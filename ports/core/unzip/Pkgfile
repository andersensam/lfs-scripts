# Description: Unzip files
# URL:         http://www.linuxfromscratch.org/blfs/view/svn/general/unzip.html
# Maintainer:  LFS
# Depends on:  

name=unzip
version=6.0
release=1
source=(https://downloads.sourceforge.net/infozip/unzip60.tar.gz
		http://www.linuxfromscratch.org/patches/blfs/svn/unzip-6.0-consolidated_fixes-1.patch)

build() {
        cd unzip60

        patch -Np1 -i $SRC/unzip-6.0-consolidated_fixes-1.patch

        make -f unix/Makefile generic

        make DESTDIR=$PKG prefix=/usr MANDIR=/usr/share/man/man1 \
			-f unix/Makefile install
}
